{
  "name": "react-create-portal",
  "version": "0.2.0",
  "description": "Render your component with react portal",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "license": "MIT",
  "devDependencies": {
    "@testing-library/react": "^9.3.0",
    "@types/jest": "^23.3.5",
    "@types/react": "16.9.5",
    "@types/react-dom": "^16.9.1",
    "husky": "^1.2.0",
    "jest": "^24.9.0",
    "jest-emotion": "^9.2.11",
    "lint-staged": "^9.2.5",
    "make-coverage-badge": "^1.0.1",
    "prettier": "^1.15.2",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "rollup": "^0.67.0",
    "rollup-plugin-typescript": "^1.0.0",
    "ts-jest": "^24.0.2",
    "tslib": "^1.9.3",
    "tslint": "^5.19.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "typescript": "^3.4.4"
  },
  "scripts": {
    "build": "rm -rf dist && tsc --emitDeclarationOnly --inlineSourceMap && rollup --config",
    "test": "jest"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "dependencies": {},
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts,tsx}": [
      "tslint --fix",
      "git add",
      "jest --bail --findRelatedTests --coverage",
      "make-coverage-badge",
      "git add"
    ]
  },
  "resolutions": {
    "**/@types/react": "16.8.14"
  }
}
